{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NOX Loader",
  "description": "Defines NOX Loader",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "loadStrategy"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of this loader"
    },
    "description": {
      "type": "string",
      "description": "a Description of the loader"
    },
    "schedule": {
      "type": "object",
      "title": "Schedule",
      "description": "The schedule for this loader",
      "$ref": "https://raw.githubusercontent.com/NoxOrg/Nox/main/src/Nox.Core/Schemas/LoaderSchedule.json"
    },
    "loadStrategy": {
      "type": "object",
      "title": "Load Strategy",
      "description": "The load strategy for this loader",
      "$ref": "https://raw.githubusercontent.com/NoxOrg/Nox/main/src/Nox.Core/Schemas/LoaderLoadStrategy.json"
    },
    "target": {
      "type": "object",
      "title": "Loader Target",
      "description": "The target for this loader",
      "$ref": "https://raw.githubusercontent.com/NoxOrg/Nox/main/src/Nox.Core/Schemas/LoaderTarget.json"
    },
    "messaging": {
      "type": "array",
      "description": "A list of messaging providers to which this loader will submit events",
      "items": {"$ref": "https://raw.githubusercontent.com/NoxOrg/Nox/main/src/Nox.Core/Schemas/MessageTarget.json"  }
    },
    "sources": {
      "type": "array",
      "description": "a List of Data Sources from which this loader will source data",
      "items": {"$ref": "https://raw.githubusercontent.com/NoxOrg/Nox/main/src/Nox.Core/Schemas/LoaderSource.json"  }
    }
  }
}

