{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NOX Entity Relationship",
  "description": "Defines a NOX entity relationship",
  "type": "object",
  "additionalProperties": false,
  "required": [ "name" ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the relationship"
    },
    "entity": {
      "type": "string",
      "description": "The name of the entity"
    },
    "description": {
      "type": "string",
      "description": "The relationship description"
    },
    "isMany": {
      "type": "boolean",
      "description": "Indicates whether it is one-to-one or one-to-many relationship"
    },
    "isRequired": {
      "type": "boolean",
      "description": "Indicates if this relationship is required"
    }
  }
}