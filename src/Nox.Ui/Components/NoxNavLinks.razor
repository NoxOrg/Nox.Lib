@using Microsoft.AspNetCore.Components.Routing
@using Nox.Solution

@inject NoxSolution Solution

@if(Solution.Domain is {Entities: not null })
{

    <div class="NoxNavLinks">

    @foreach (var entity in Solution.Domain.Entities)
    {
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@{"ui/"+entity.PluralName}">
                <span class="oi oi-list-rich" aria-hidden="true"></span> @entity.PluralName
            </NavLink>
        </div>    
    }
</div>

}