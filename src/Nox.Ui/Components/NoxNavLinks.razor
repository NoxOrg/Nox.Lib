@using Microsoft.AspNetCore.Components.Routing

@inject IProjectConfiguration NoxService

@if(NoxService.Entities is not null)
{

    <div class="NoxNavLinks">

    @foreach (var entity in NoxService.Entities)
    {
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@{"ui/"+entity.PluralName}">
                <span class="oi oi-list-rich" aria-hidden="true"></span> @entity.PluralName
            </NavLink>
        </div>    
    }
</div>

}