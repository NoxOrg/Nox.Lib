@inject IProjectConfiguration NoxService

<MudAppBar Elevation="1">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" 
    Color="Color.Inherit" Edge="Edge.Start"
    OnClick="@((e) => NavMenuToggle())" />

    <MudText Typo="Typo.h5" Class="ml-3">@NoxService.Name</MudText>
    <MudSpacer />
    <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    @ChildContent
</MudAppBar>

@code
{
    [CascadingParameter]
    private NoxUiLayout Parent { get; set; } = null!;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    void NavMenuToggle()
    {
        Parent.ToggleNavMenuOpen();
    }
}