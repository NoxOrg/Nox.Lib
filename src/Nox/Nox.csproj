<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <PackageId>Nox.Lib</PackageId>
    <Version>1.0.5</Version>
    <Authors>Andre Sharpe</Authors>
    <Company>Creations Unlimited</Company>
    <PackageTags>Framework Dynamic Microservice Api JobScheduler Event</PackageTags>
    <PackageProjectUrl>https://github.com/andresharpe/Nox</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>images\nox.png</PackageIcon>
    <Description>
      A framework for rapid enterprise solution development for .Net
    </Description>
    
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Nox.Api.OData\Nox.Api.OData.csproj" />
    <ProjectReference Include="..\Nox.Configuration\Nox.Configuration.csproj" />
    <ProjectReference Include="..\Nox.Data\Nox.Data.csproj" />
    <ProjectReference Include="..\Nox.Dynamic\Nox.Dynamic.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\nox.png" Pack="true" Visible="false" PackagePath="images\nox.png" />
  </ItemGroup>

</Project>
